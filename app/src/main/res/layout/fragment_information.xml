<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Information.InformationFragment">
    <RelativeLayout
        android:id="@+id/fragment_information_frame_title"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/backgroundeditext">
        <ImageView
            android:id="@+id/fragment_information_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:src="@drawable/avatar_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@id/fragment_information_avatar"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fragment_information_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_name"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/fragment_information_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Email"
                android:autoLink="email"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:padding="12dp"
        android:id="@+id/fragment_information_mssv_frame"
        android:background="@drawable/backgroundeditext"
        android:layout_below="@id/fragment_information_frame_title"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_information_title_mssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/text_id"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/fragment_information_mssv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/text_id"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fragment_information_phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:background="@drawable/backgroundeditext"
        android:layout_below="@id/fragment_information_mssv_frame"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_information_sdt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:text="@string/text_phoneNumber"
            android:textSize="15sp" />
        <TextView
            android:layout_below="@id/fragment_information_sdt_title"
            android:id="@+id/fragment_information_sdt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_phoneNumber"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="20sp" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/backgroundeditext"
        android:layout_below="@id/process_frame"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_information_title_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="@string/text_subjectClass"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/fragment_information_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:text="Lập trình moblie ET4710-137364"
            android:textStyle="bold"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/process_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:background="@drawable/backgroundeditext"
        android:layout_below="@id/fragment_information_phoneNumber"
        android:orientation="vertical">
        <TextView
            android:id="@+id/fragment_information_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:textStyle="bold"
            android:text="Tiến trình học tập"
            android:textSize="15sp" />
        <LinearLayout
            android:id="@+id/fragment_information_countAbsent_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_information_absentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Buổi vắng:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/fragment_information_absent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/score_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fragment_information_midtermScoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Điểm giữa kì:"
                android:textSize="20sp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/fragment_information_midTermScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textStyle="bold"
                android:text="0"
                android:textSize="20sp" />
            <TextView
                android:layout_marginLeft="25dp"
                android:id="@+id/fragment_information_finalTermScoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="Điểm Cuối kì:"
                android:textSize="20sp" />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/fragment_information_finalTermScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:text="0"
                android:textStyle="bold"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>