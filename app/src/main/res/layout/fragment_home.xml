<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="6dp"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment">

    <TextView
        android:id="@+id/week_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        android:padding="8dp"
        android:text="week 1"
        android:background="@drawable/rounder_background"
        android:textStyle="bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/Name_class"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="54dp"
        android:gravity="center"
        android:text="@string/text_SoDoLop"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/table"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/table" />

    <Button
        android:id="@+id/checkInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="214dp"
        android:padding="20dp"
        android:text="Check In"
        app:cornerRadius="8dp" />

    <TextView
        android:id="@+id/timeCheckInTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="339dp"
        android:gravity="center"
        android:text="@string/checkin_th_nh_c_ng_l_c"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/timeCheckInTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeCheckInTitle"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="12dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="12:22"
        android:textStyle="bold"
        android:textSize="22sp" />
</RelativeLayout>