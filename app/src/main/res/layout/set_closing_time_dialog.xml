<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/timeClosing_edt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginVertical="15dp"
        android:background="@drawable/rounder_background"
        android:hint="Nhập thời gian với định dạng  HH:mm"
        android:minHeight="48dp" />
    <Button
        android:id="@+id/ok_dialog_timeClosing"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@drawable/rounder_background"
        android:text="Ok"/>
    <ProgressBar
        android:id="@+id/progress_bar3"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@id/save_btn"/>
</LinearLayout>